@model YemekSepeti.Models.Restaurant
@{
    Layout = "_Layout";
}

<section class="layout_padding" style="padding:60px;">
    <div class="container" style="max-width:600px;">

        <h2 class="mb-4">Add New Restaurant</h2>

        <form method="post" action="/Admin/AddRestaurant" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label>Name</label>
                <input type="text" class="form-control" name="Name" required />
            </div>

            <div class="form-group mb-3">
                <label>Description</label>
                <textarea class="form-control" name="Description"></textarea>
            </div>

            <div class="form-group mb-3">
                <label>Address</label>
                <input type="text" class="form-control" name="Address" required />
            </div>

            <div class="form-group mb-3">
                <label>Restaurant Image</label>
                <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
            </div>

            <button type="submit" class="btn btn-success">Save</button>
            <a href="/Admin/Restaurants" class="btn btn-secondary">Cancel</a>

        </form>

    </div>
</section>
