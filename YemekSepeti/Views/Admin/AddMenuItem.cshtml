@model YemekSepeti.Models.MenuItem
@{
    Layout = "_Layout";
}

<section class="layout_padding" style="padding:60px;">
    <div class="container" style="max-width:600px;">

        <h2 class="mb-4">Add Menu Item</h2>

        <form method="post" enctype="multipart/form-data" action="/Admin/AddMenuItem">

            <input type="hidden" name="RestaurantID" value="@ViewBag.RestaurantID" />

            <div class="form-group mb-3">
                <label>Name</label>
                <input class="form-control" name="Name" required />
            </div>

            <div class="form-group mb-3">
                <label>Description</label>
                <textarea class="form-control" name="Description"></textarea>
            </div>

            <div class="form-group mb-3">
                <label>Price</label>
                <input class="form-control" name="Price" type="number" step="0.01" required />
            </div>

            <div class="form-group mb-3">
                <label>Category</label>
                <select name="Category" class="form-control">
                    <option>General</option>
                    <option>Breakfast</option>
                    <option>Lunch</option>
                    <option>Dinner</option>
                    <option>Dessert</option>
                    <option>Burger</option>
                    <option>Pizza</option>
                    <option>Drinks</option>
                </select>
            </div>

            <!-- Image Upload -->
            <div class="form-group mb-4">
                <label>Menu Image</label>
                <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
            </div>

            <button class="btn btn-success">Save</button>
            <a href="/Admin/RestaurantMenu?id=@ViewBag.RestaurantID" class="btn btn-secondary">Cancel</a>

        </form>

    </div>
</section>
