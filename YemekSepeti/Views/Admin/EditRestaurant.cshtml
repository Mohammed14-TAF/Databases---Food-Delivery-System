@model YemekSepeti.Models.Restaurant

@{
    Layout = "_Layout";
}

<section class="layout_padding" style="padding: 80px 0;">
    <div class="container" style="max-width: 700px;">

        <h2 class="heading_center" style="margin-bottom: 40px;">
            Edit Restaurant
        </h2>

        <form method="post" action="/Admin/EditRestaurant" enctype="multipart/form-data">

            <input type="hidden" name="RestaurantID" value="@Model.RestaurantID" />

            <!-- NAME -->
            <div class="form-group mb-3">
                <label style="font-weight:600;">Name</label>
                <input type="text"
                       class="form-control"
                       name="Name"
                       value="@Model.Name"
                       required />
            </div>

            <!-- DESCRIPTION -->
            <div class="form-group mb-3">
                <label style="font-weight:600;">Description</label>
                <textarea class="form-control"
                          name="Description"
                          rows="3">@Model.Description</textarea>
            </div>

            <!-- ADDRESS -->
            <div class="form-group mb-4">
                <label style="font-weight:600;">Address</label>
                <input type="text"
                       class="form-control"
                       name="Address"
                       value="@Model.Address"
                       required />
            </div>

            <!-- CURRENT IMAGE -->
            <div class="form-group mb-3">
                <label style="font-weight:600;">Current Image</label><br />
                
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl"
                         style="width:200px; height:150px; object-fit:cover; border-radius:8px;" />
                }
                else
                {
                    <p style="color:gray;">No image uploaded</p>
                }
            </div>

            <!-- NEW IMAGE UPLOAD -->
            <div class="form-group mb-4">
                <label style="font-weight:600;">Upload New Image (optional)</label>
                <input type="file" name="ImageFile" class="form-control" accept="image/*" />
            </div>

            <!-- BUTTONS -->
            <div style="display:flex; gap:15px;">

                <button type="submit"
                        class="btn btn-dark"
                        style="padding:12px 25px; font-size:16px;">
                    Save Changes
                </button>

                <a href="/Admin/Restaurants"
                   class="btn btn-secondary"
                   style="padding:12px 25px; font-size:16px;">
                    Cancel
                </a>

            </div>

        </form>
    </div>
</section>
