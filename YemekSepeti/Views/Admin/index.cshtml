@model List<YemekSepeti.Models.Restaurant>

@{
    Layout = "_Layout";
}

<section class="layout_padding" style="padding:60px;">
    <div class="container">

        <h2 class="mb-4">Manage Restaurants</h2>

        <a href="/RestaurantAdmin/Add" class="btn btn-primary mb-4">Add New Restaurant</a>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Address</th>
                    <th>Status</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.RestaurantID</td>
                        <td>@r.Name</td>
                        <td>@r.Description</td>
                        <td>@r.Address</td>
                        <td>
                            @if (r.IsActive)
                            {
                                <span class="text-success">Active</span>
                            }
                            else
                            {
                                <span class="text-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="/RestaurantAdmin/Edit/@r.RestaurantID" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/RestaurantAdmin/Delete/@r.RestaurantID" class="btn btn-sm btn-danger">Deactivate</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</section>
