@model List<YemekSepeti.Models.CartItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Checkout";
}

<h2 class="mb-4">Checkout</h2>

<div class="row">

    <div class="col-md-8">
        <h4>Order Summary</h4>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price ₺</td>
                        <td>@item.Quantity</td>
                        <td>@item.TotalPrice ₺</td>
                    </tr>
                }
            </tbody>
        </table>

        <h5 class="text-end">
            Total:
            <span class="text-success">
                @Model.Sum(x => x.TotalPrice) ₺
            </span>
        </h5>
    </div>

    <div class="col-md-4">
        <h4>Logged-in User</h4>

        <div class="card p-3">
            <p><strong>Username:</strong> @User.Identity.Name</p>

            <form asp-action="PlaceOrder" method="post">
                <button class="btn btn-success w-100">
                    Place Order
                </button>
            </form>
        </div>
    </div>

</div>
